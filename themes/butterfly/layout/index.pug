extends includes/layout.pug

block content
  include ./includes/mixins/post-ui.pug
  #recent-posts.recent-posts
    include includes/notice.pug
    .author-content
      .bannerGroup(style='height:auto;width:73%;padding:0px;')
        .recent-post-item
          !=partial('includes/sliderbar', {}, {cache:true})
        .categoryGroup
          !=partial('includes/sy2sliderbar', {}, {cache:true})
      .recent-post-item(style='height:auto;width:25%;padding:0px;')
        !=partial('includes/sysliderbar', {}, {cache:true})
    if theme.categoryBar.enable
      .recent-post-item(style='height:auto;width:100%;padding:0px;')
        #categoryBar!= list_categories(site.categories,{class: 'categoryBar',depth: 1})
    +postUI
    include includes/pagination.pug